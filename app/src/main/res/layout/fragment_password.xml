<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pub.PasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_light"
            android:paddingVertical="20dp"
            android:text="Restablecer contraseña"
            android:textAlignment="center"
            android:textColor="#D9631E"
            android:textSize="36sp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:paddingVertical="20dp"
            android:text="Ingresa el correo electrónico"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#D9631E"
            android:layout_marginBottom="50dp">
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            app:startIconDrawable="@drawable/ic_person"
            app:startIconTint="#D9631E"
            app:counterEnabled="true"
            app:counterMaxLength="50">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:text="misterio367@gmail.com"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="90dp"
            android:backgroundTint="#D9631E">
        </Button>
        <Button
            android:id="@+id/btn_to_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:fontFamily="@font/poppins_light"
            android:textColor="#D9631E"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        </Button>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>